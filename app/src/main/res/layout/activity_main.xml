<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Inputs para ingresar números -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <EditText
            android:id="@+id/numero1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Número 1"
            android:inputType="number" />

        <EditText
            android:id="@+id/numero2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Número 2"
            android:inputType="number" />
    </LinearLayout>

    <!-- Botones para realizar operaciones -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sumar"
        android:onClick="realizarSuma" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restar"
        android:onClick="realizarResta" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Multiplicar"
        android:onClick="realizarMultiplicacion" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dividir"
        android:onClick="realizarDivision" />

    <!-- Botones para ver historial -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver historial Suma"
        android:onClick="verHistorialSuma" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver historial Resta"
        android:onClick="verHistorialResta" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver historial Multiplicación"
        android:onClick="verHistorialMultiplicacion" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver historial División"
        android:onClick="verHistorialDivision" />

</LinearLayout>
